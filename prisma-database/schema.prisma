// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:sqlite.db"
}

model Player {
  id       String @id @default(uuid())
  username String @unique
  password String
  cards    Card[]
}

model Card {
  id                 String       @id @default(uuid())
  name               String
  foil               Boolean
  priceBRL           Float
  similarCardsAmount Int
  language           String
  playerId           String
  player             Player?      @relation(fields: [playerId], references: [id])
}